{
  "manifest_version": 3,
  "name": "WhatsApp Web CRM Extension",
  "version": "1.0.0",
  "description": "Extensión CRM para WhatsApp Web - Gestión de etiquetas, plantillas y automatización",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "alarms",
    "notifications"
  ],
  "host_permissions": [
    "https://*.supabase.co/*",
    "https://web.whatsapp.com/*",
    "https://*.youtube.com/*",
    "https://*.google.com/*",
    "https://*.googleapis.com/*",
    "https://maps.gstatic.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["vendor/supabase.js", "config/supabase.js", "services/supabaseClient.js", "services/authService.js", "utils/domUtils.js", "services/deviceService.js", "services/contactsService.js", "content.js", "sidebar.js"],
      "css": ["sidebar.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "WhatsApp CRM",
    "default_icon": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["sidebar.html", "sidebar.js", "config/*", "services/*", "utils/*", "assets/*"],
      "matches": ["https://web.whatsapp.com/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; frame-src 'self' https://*.youtube.com https://*.google.com; img-src 'self' https://* data: blob:; connect-src 'self' https://*.supabase.co https://*.whatsapp.com https://*.youtube.com https://*.google.com https://*.googleapis.com https://maps.gstatic.com; default-src 'self'"
  }
} 